{
  "$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useKeyWithClickEvents": "off",
        "useKeyWithMouseEvents": "off"
      },
      "recommended": true
    },
    "ignore": ["node_modules/", ".next/", "dist/", "data/", "src-tauri/"]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentStyle": "space",
    "indentWidth": 2,
    "ignore": ["node_modules/", ".next/", "dist/", "data/", "src-tauri/"]
  }
}
